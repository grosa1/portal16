.block {
  &__header {
    font-size: 36px
    margin: 64px 0
  }
  &__actions {
    margin: 0 -16px;
  }
  &__action {
    margin: 0 16px
  }
}

.block_media {
  
  &__content {
    display: flex
    font-size: 18px
    line-height 2em
    margin: 0 -8px;
    > div {
      flex: 1 1 50%
      padding: 32px
      margin: 0 8px;
    }
  }
  &__textContent {
    padding: 16px
  }
}